<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
 
            <!-- 实心 -->
            <solid android:color="#cccccc"/>
            <!-- 渐变 -->
            <gradient
                android:startColor="#cccccc"
                android:endColor="#cccccc"
                android:angle="270" />
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#eeeeee" />
            <!-- 圆角 -->
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        

</shape>
